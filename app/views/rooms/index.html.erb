<div class="row">
  <div class="col-md-2">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "ルーム登録", new_room_path, class:"sidebar-link active" %></li>
      <li class="sidebar-item"><a href="#">予約ルーム一覧</a></li>
    </ul>
  </div>
  <div class="col-md-10">
    <div class="card card-default text-center">
      <div class="card-heading">
        登録ルーム一覧
      </div>
      <table>
        <thead>
          <tr>
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>料金</th>
            <th>作成日</th>
          </tr>
        </thead>
 
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= image_tag @room.image.url %></td>
              <td><%= room.room_name %><%= link_to "room.room_name", show_room_path %></td>
              <td><%= room.description %></td>
              <td><%= room.price %></td>
              <td><%= room.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

