<div class="container">
  <div class="row">

    <div style="margin-bottom: 30px;">
      <div class="col-md-5 text-center d-grid gap-2 col-6 mx-auto d-flex">
        <%= link_to " ルーム登録", new_room_path, class: "btn btn-default" %>
        </br>
        <%= link_to " 登録ルーム一覧", rooms_path, class: "btn btn-default" %>
        </br>
        <%= link_to " 予約ルーム一覧", reservations_path, class: "btn btn-default" %>
      </div>
    </div>

    <div class="d-flex">
      <div class="col-md-7">
        <div class="card card-default">
          <div class="card-heading align-middle text-center">
            予約情報
          </div>
          <div class="card-body">
            <div class="container">
              <div style="margin-bottom: 20px;">
                <img src="<%= @room.image_url %>" class="img-max">
              </div>
              <div style="margin-bottom: 20px;">
                <h4><%= @room.room_name %></h4>
                <p><%= @room.address %></p>
              </div>
              <div>
                <h3><%= @room.description %></h3>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-4 margin">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h3 class="form-group">&yen; <%= @room.price.to_i %> / 日</h3>

            <%= form_for @room.reservations.new do |f| %>
              <%= f.hidden_field :room_id, :value => @room.id %>
              <div class="form-group">
                <label style="margin-bottom: 5px;">開始日</label>
                <%= f.date_field :start_date,autocomplete: "開始日",class: "form-control" %>
              </div>

              <div class="form-group">
                <label style="margin-bottom: 5px;">終了日</label>
                <%= f.date_field :end_date,autocomplete: "終了日",class: "form-control" %>
              </div>

              <div class="form-group">
                <label style="margin-bottom: 5px;">人数</label>
                <%= f.number_field :people,autocomplete: "人数",class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "予約", class:"btn btn-blue btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
