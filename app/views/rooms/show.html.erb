<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= link_to "ルーム登録", new_room_path, class:"btn btn-default" %>
      </br></br>
      <%= link_to " 登録ルーム一覧", rooms_path, class: "btn btn-default" %>
      </br></br>
      <%= link_to " 予約ルーム一覧", reservations_path, class: "btn btn-default" %>
      </br></br>
      <li><a href="#">予約ルーム一覧</a></li>
    </div>
    
    <div class="col-md-8 text-center margin">
      <div class="card card-default">
        <div class="card-heading align-middle">
          ルーム詳細
        </div>
        <div class="card-body">
          <div class="container">
            <%= form_for @room do |f| %>
              <div class="form-group">
                <label class="label">ルーム名</label>
                <%= f.text_field :room_name, autofocus: true, autocomplete: "ルーム名", placeholder: "ルーム名を入力",class: "form-control" %>
              </div>
              
              <div class="form-group">
                <label class="label">ルーム紹介</label>
                <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, autocomplete: "ルーム紹介", placeholder: "ルーム説明を入力", class: "form-control" %>
              </div>
              
              <div class="form-group">
                <label class="label">料金</label>
                <%= f.number_field :price, autofocus: true, autocomplete: "料金", placeholder: "1日あたりの料金を入力", class: "form-control" %>
              </div>
              
              <div class="form-group">
                <label class="label">住所</label>
                <%= f.text_field :address, autofocus: true, autocomplete: "住所", placeholder: "住所を入力", class: "form-control" %>
              </div>
              
              <div class="form-group">
                <label class="label">ルーム画像</label></br>
                <button type="button" class="btn btn-outline-secondary rounded-pill">
                  <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
                </button>
              </div>
              
              <div class="actions">
                <%= f.submit "更新", class:"btn btn-blue btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
