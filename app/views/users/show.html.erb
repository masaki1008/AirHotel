<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "プロフィール確認", user_path(current_user.id), class: "sidebar-link active" %></li>
    </ul>
    <br/>
    <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-default" %>
  </div>
  <div class="col-md-3  text-center">
