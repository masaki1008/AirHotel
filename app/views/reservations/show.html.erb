<div class="container">
  <div class="row">
    <div class="col-md-5 d-grid gap-2 col-6 mx-auto">
      <div class="card card-default">
        
        <div class="card-heading align-middle text-center">
          予約内容確認
        </div>
        
        <div class="card-body">
          <h3 class="form-group" style="padding-bottom: 10px; border-bottom: 1px solid #eaedef;">&yen; <%= @reservation.room.price.to_i %> / 日</h3>
          
          <div class="form-group">
            <label style="margin-bottom: 5px;">チェックイン</label>
            <div class="form-control" style="background-color: #e9ecef;"><%= @reservation.start_date %></div>
          </div>
          
          <div class="form-group">
            <label style="margin-bottom: 5px;">チェックアウト</label>
            <div class="form-control" style="background-color: #e9ecef;"><%= @reservation.end_date %></div>
          </div>
          
          <div class="form-group">
            <label style="margin-bottom: 5px;">宿泊日数：</label>
            <%= @reservation.end_date - @reservation.start_date %>日
          </div>
          
          <div class="form-group">
            <label style="margin-bottom: 5px;">宿泊人数：</label>
            <%= @reservation.people.to_i %>人
          </div>
          
          <div class="form-group">
            <label style="margin-bottom: 5px;">合計金額</label>
            <div class="form-control" style="background-color: #e9ecef;"><%= @reservation.people.to_i %>人</div>
            <!--ここは仮で入れている-->
          </div>
          
          <div class="form-group">
            <p style="font-size: 13px; padding-bottom: 10px; border-bottom: 1px solid #eaedef;">上記内容でよろしければ「予約確定」を押してください</p>
          </div>
          
          <%= form_for @reservation do |f| %>
            <div class="form-group">
              <%= f.submit "予約確定", class:"btn btn-blue btn-block" %>
            </div>
          <% end %>  
          
            <div class="form-group">
              <%= link_to " ルーム詳細に戻る", :back, class: "btn btn-default btn-block" %>
            </div>
        </div>
        
      </div>
    </div>
  </div>
</div>